<Page x:Class="Handheld_Control_Panel.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Handheld_Control_Panel.Pages"
      xmlns:uc="clr-namespace:Handheld_Control_Panel.Pages.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" 
      Title="HomePage" Loaded="Page_Loaded">

    <StackPanel x:Name="stackPanel" Style="{StaticResource pageStackPanel}">
        <Label Content="{DynamicResource Header_CPU_Settings}" Style="{StaticResource headerLabel}" />
        <Rectangle Style="{StaticResource rectangle}" />
        <uc:TDP_Slider/>
        <uc:TDP2_Slider/>

        <uc:Volume_Slider />
        <uc:Brightness_Slider/>
    </StackPanel>
</Page>
