<Page x:Class="Handheld_Control_Panel.Pages.ProfilesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Handheld_Control_Panel.Pages"
      xmlns:uc="clr-namespace:Handheld_Control_Panel.UserControls"
            xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignWidth="445" 
      Title="HomePage" Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Grid>
        <ListBox x:Name="controlList" VerticalAlignment="Top" FontSize="16" Background="Transparent" Width="450"  ScrollViewer.CanContentScroll="True" ScrollViewer.PanningMode="VerticalOnly" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Center"     >
            <ListBox.Resources>

                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent4}" />
                    <Style.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="0"/>

                        </Style>
                    </Style.Resources>
                </Style>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid  Height="53">

                        <StackPanel Margin="11,0,9,0" Orientation="Vertical">
                           
                            <DockPanel >
                                <iconPacks:PackIconSimpleIcons Margin="0,0,5,0"  VerticalAlignment="Center" Width="22" Visibility="{Binding iconVisibility}"  Kind="{Binding icon}" Height="22"  />
                                <iconPacks:PackIconMaterial Margin="0,0,5,0" VerticalAlignment="Center" Kind="{Binding iconMaterial}"  Visibility="{Binding iconMaterialVisibility}"  Width="22" Height="22" />
                                <TextBlock Text="{Binding ProfileName}" FontSize="16" MaxWidth="300" />
                                
                                <TextBlock  HorizontalAlignment="Right" Text="{DynamicResource Default_Profile}" Visibility="{Binding VisibilityDefaultProfile}" FontSize="16" />
                            </DockPanel>
                            <DockPanel>
                                <TextBlock  Text="{Binding Exe}" FontSize="14" FontStyle="Italic"/>
                               
                                <TextBlock Margin="0,-6,0,0" HorizontalAlignment="Right" Text="{DynamicResource Active_Profile}" Visibility="{Binding VisibilityActiveProfile}" FontSize="16" />
                            </DockPanel>
                

                        </StackPanel>
         



                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>

</Page>
