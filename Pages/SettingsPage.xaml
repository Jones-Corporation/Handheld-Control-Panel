<Page x:Class="Handheld_Control_Panel.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Handheld_Control_Panel.Pages"
      xmlns:uc="clr-namespace:Handheld_Control_Panel.UserControls"
      mc:Ignorable="d" 
      d:DesignWidth="800" 
      Title="HomePage" Loaded="Page_Loaded">
    
    <ScrollViewer x:Name="pageScrollViewer" Style="{StaticResource pageScrollViewer}">
        <StackPanel x:Name="stackPanel" >
            <Label Content="{DynamicResource Header_General_Settings}" Style="{StaticResource headerLabel}" />
            <Rectangle Style="{StaticResource rectangle}" />
            <uc:Language_Listbox />
            <uc:Theme_Toggleswitch />
            <uc:AccentColor_Listbox/>
            <uc:Autostart_Toggleswitch/>
             
            <Label Content="{DynamicResource Header_TDP_Settings}" Style="{StaticResource headerLabel}" />
            <Rectangle Style="{StaticResource rectangle}" />
            <uc:MaxTDP_Slider/>
            <uc:MinTDP_Slider />

        </StackPanel>
    </ScrollViewer>
  
</Page>
