<Window x:Class="Handheld_Control_Panel.GameLauncher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Handheld_Control_Panel"
        mc:Ignorable="d"
        Background="{DynamicResource backgroundImage}"
        Title="GameLauncher"  Width="1920"  Height="1080"  WindowState="Maximized"
    WindowStyle="None">
    <Window.Resources>

        <ImageSource x:Key="imgSource">Resources\Pictures\gamelauncher_background.jpg</ImageSource>
        <ImageBrush x:Key="backgroundImage" ImageSource="{DynamicResource imgSource}" Opacity="0.7"></ImageBrush>

    </Window.Resources>
    <Grid>
        
    </Grid>
</Window>
