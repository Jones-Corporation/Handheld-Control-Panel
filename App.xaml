<Application x:Class="Handheld_Control_Panel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Handheld_Control_Panel"
             xmlns:controls="using:Microsoft.UI.Xaml.Controls"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="MainWindow.xaml"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
 
                <ui:ThemeResources />
                <ui:XamlControlsResources />
       

                <ResourceDictionary Source="/Styles/TextStyles.xaml" />
                <ResourceDictionary Source="/Styles/IconStyles.xaml" />
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml" />
           
                <!-- MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive! -->

                <ResourceDictionary Source="/StringResources/StringResources.xaml" />

            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
