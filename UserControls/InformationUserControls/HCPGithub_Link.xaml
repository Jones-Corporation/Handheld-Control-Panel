<UserControl x:Class="Handheld_Control_Panel.UserControls.HCPGithub_Link"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Handheld_Control_Panel.UserControls" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
              xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignWidth="450"  Style="{DynamicResource userControls}" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Border Style="{StaticResource userControlBorder}"   x:Name="border" >
        <DockPanel VerticalAlignment="Center" >
            <DockPanel DockPanel.Dock="Top">
                <Label Content="{DynamicResource UserControl_HCPGithub}" DockPanel.Dock="Left"  Style="{StaticResource userControlMainLabel}"/>
                <TextBlock FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right" DockPanel.Dock="Top" Margin="0,0,22,0" >
                <Hyperlink NavigateUri="http://github.com/project-sbc/Handheld-Control-Panel" RequestNavigate="Hyperlink_RequestNavigate" x:Name="control">
                    <TextBlock  Style="{StaticResource controllerButtonTextblock_InstructionsCondensed}" Text="&#xE71B;" />
                </Hyperlink>
                </TextBlock>
            </DockPanel>
            <TextBlock Text="{DynamicResource UserControl_HCPGithub_Subtext}" Style="{StaticResource userControlSubtextAboutPagesViewBox_Textblock}" TextWrapping="Wrap" />
        </DockPanel>

    </Border>
</UserControl>
