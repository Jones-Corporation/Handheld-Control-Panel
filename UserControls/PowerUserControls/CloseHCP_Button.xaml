<UserControl x:Class="Handheld_Control_Panel.UserControls.CloseHCP_Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Handheld_Control_Panel.UserControls" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
              xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignWidth="450" Height="50" Style="{DynamicResource userControls}" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Border Style="{StaticResource userControlBorder}"   x:Name="border" >
        <DockPanel VerticalAlignment="Center" >


            <Label  x:Name="controlLabel"  HorizontalAlignment="Right" Content="{DynamicResource UserControl_CloseHCP}"   Margin="0,0,0,0"  VerticalAlignment="Center"   Style="{StaticResource userControlMainLabel}" />
            <Button FontSize="10" Content="{DynamicResource ContextMenu_Close}" Name="control" Width="100" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" Margin="0,0,22,0" Click="Button_Click" >
                
            </Button>
        </DockPanel>

    </Border>
</UserControl>
