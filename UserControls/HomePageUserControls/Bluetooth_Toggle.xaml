<UserControl x:Class="Handheld_Control_Panel.UserControls.Bluetooth_Toggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Handheld_Control_Panel.UserControls" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
              xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignWidth="450" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Border Style="{StaticResource userControlBorder}"   x:Name="border" >
        <DockPanel >

            <Label Content="{DynamicResource Usercontrol_Bluetooth}" Margin="5,0,0,0" DockPanel.Dock="Left" Style="{StaticResource userControlMainLabel}"/>
            <mah:ToggleSwitch x:Name="control" DockPanel.Dock="Right" HorizontalAlignment="Right" OnContent="" OffContent="" Margin="0,0,-102,0" Toggled="toggleSwitch_Toggled" />
        </DockPanel>

    </Border>
</UserControl>
